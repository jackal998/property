<div class="panel panel-danger">

  <div class="panel-heading">
    <h2>Editing user: 
    { :id => <%= @user.id %>, :nickname => <%= @user.nickname %>, :email => <%= @user.email %> }</h2>
  </div>
  
  <div class="panel-body">
    <%= form_for @user, :url => admin_user_path, :method => "patch" do |f| %>
      <div class="form-horizontal">
        <div class="form-group" >
          <div class="col-md-2 text-right">
            <%= f.label :Email, :class => "control-label" %>
          </div>
          <div class="col-md-10" style="display:inline-block">
            <%= f.label @user.email, :class => "control-label" %>
          </div>
        </div>

        <%= render :partial => "devise/shared/namefield_of_form", :locals => { :f => f } %>

        <div class="form-group" >
          <div class="col-md-2 text-right">
            <%= f.label :role, :class => "control-label" %>
          </div>
          <div class="col-md-10" style="display:inline-block">
            <%= f.text_field :role, :class => "form-control" %>  
          </div>
        </div>
      </div>
      
      <div class="actions pull-right">
        <%= f.submit "Update", :class => "btn btn-primary" %>
      </div>
    <% end %>    
  </div>

  <div class="panel-footer">
    <div class="form-inline">
      <h4>Delete this account</h4>
        <div class="text-right">
        <div class="form-group">
              <h5>Unhappy??</h5>
          </div>
          <div class="form-group">
              <%= link_to "DELETE", admin_users_path, data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-link" %>      
          </div>
          <div class="form-group">
              <%= link_to "Back", :back, :class => "btn btn-info" %> 
          </div>           
        </div>
      </div>
    </div>
  </div>
</div>