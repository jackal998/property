<% comment.update(:title => "Re: #{@obj.name}") if comment.title == "" || comment.title.nil? %>

<%= form_for comment, :url => "#" do |c| %>


  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><%= comment.user.nickname ? comment.user.nickname : comment.user.email.split("@").first %></span>
        <span class="input-group-addon" id="basic-addon1">Title:</span>
        <%= c.text_field :title, :class => "form-control", :readonly => true, :style => "background-color:#fff" %>
      </div>
    </div>

    <div class="panel-body">
      <%= c.text_area :paragraph, :class => "form-control", :readonly => true, :style => "background-color:#fff" %>
    </div>

  </div>    
<% end %>
