
<%= form_for Comment.new, :url => user_comments_path(:obj => @obj) do |c| %>

  <div class="panel panel-success">
    <div class="panel-heading">
      <div class="input-group">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button">Title:</button>
        </span>
        <%= c.text_field :title, :class => "form-control", :placeholder=> "Re: #{@obj.name}" %>
      </div>
    </div>
    
    <div class="panel-body">
      <%= c.text_area :paragraph, :class => "form-control" %>
    </div>

    <div class="panel-body">
      <div class="input-group">

        <%= c.submit "submit", :class => "btn btn-default text-right" %>
        
        <div class="input-group-btn">
          <button type="button" class="btn btn-default" aria-label="Left Align" value="Input">
            <span class="glyphicon glyphicon-music" aria-hidden="true"></span>
          </button>

          <button type="button" class="btn btn-default" aria-label="Left Align" value="Input">
            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
          </button>

          <button type="button" class="btn btn-default" aria-label="Left Align" value="Input">
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
          </button>
        </div>

      </div>
    </div>

  </div>    
<% end %>
